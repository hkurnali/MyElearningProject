@model List<MyElearningProject.DAL.Entities.Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@if (!Model.Any())
{

    <div class="alert alert-warning" role="alert">
        Ekli  <a href="" class="alert-link">Öğrenci</a> Bulunmamaktadır.
    </div>
    <br/>

    <a href="/Student/AddStudent/" class=" btn btn-success">Yeni Öğrenci Ekle</a>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-block">
                    <h2>Öğrenci Sayfası</h2>
                    <table class="table table-bordered">

                        <tr>
                            <th>#</th>
                            <th>İsim</th>
                            <th>Soyad</th>

                            <th>Sil</th>
                            <th>Güncelle</th>
                            <th>Kurslar</th>

                        </tr>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.StudentID</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>

                                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-success">Güncelle</a></td>
                                <td><a href="/Student/#/@item.StudentID" class="btn btn-primary">Kurslar</a></td>


                            </tr>
                        }



                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="/Student/AddStudent/" class=" btn btn-success">Yeni Öğrenci Ekle</a>
}
