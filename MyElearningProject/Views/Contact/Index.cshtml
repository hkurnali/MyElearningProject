@model List<MyElearningProject.DAL.Entities.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h2>İletişim Sayfası</h2>
                <table class="table table-bordered">

                    <tr >
                        <th>#</th>
                        <th>Açıklama</th>
                        <th>Adres</th>
                        <th>Tel</th>
                        <th>Mail</th>
                        <th>Harita</th>
                        <th>Sil</th>
                        <th>Güncelle</th>



                    </tr>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.ContactID</td>
                            <td>@item.Description</td>
                            <td>@item.Address</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.MapURL</td>
                            <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-success">Güncelle</a></td>


                        </tr>
                    }



                </table>
            </div>
        </div>
    </div>
</div>


