@model MyElearningProject.DAL.Entities.Instructor
@{
    ViewBag.Title = "UpdateInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Eğitmen Güncelleme Sayfası</h2>

<form method="post">

    @Html.HiddenFor(x => x.InstructorID, new { @class = "form-control" })
    <br />
    <label>Eğitmen Adı</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <label>Eğitmen Soyad</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br />
    <label>Eğitmen Görseli</label>
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />
    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>


