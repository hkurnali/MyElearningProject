@model  MyElearningProject.DAL.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post" class="table table-bordered">

    @Html.HiddenFor(x => x.TestimonialID, new { @class = "form-control" })
    <br />
    <label>Referans Ad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
    <br />
    <label>Referans Bölümü</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Referans Görseli</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label>Referans Yorum</label>
    @Html.TextBoxFor(x => x.Comment, new { @class = "form-control" })
    <br />
    <label>Referans Durumu</label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })

    <br /><br />
    <button class="btn btn-primary">Kaydet</button>
