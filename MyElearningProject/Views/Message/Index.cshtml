@model List<MyElearningProject.DAL.Entities.Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h2>Mesaj Sayfası</h2>
                <table class="table table-bordered">

                    <tr>
                        <th>#</th>
                        <th>İsim</th>
                        <th>Mail</th>
                        <th>Konu</th>
                        <th>Mesaj</th>
                        <th>Sil</th>


                    </tr>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.MessageID</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Subject</td>
                            <td>@item.MessageDetail</td>
                            <td><a href="/Message/DeleteMessage/@item.MessageID" class="btn btn-danger">Sil</a></td>
                           

                        </tr>
                    }



                </table>
            </div>
        </div>
    </div>
</div>